								{{else}}
									<a class="dropdown-item page-link active disabled">Prezzo crescente</a>
								{{/if}}
								{{#if navigation.pricedesc}}
									<a class="dropdown-item page-link" href="{{navigation.pricedesc}}">Prezzo decrescente</a>
								{{else}}
									<a class="dropdown-item page-link active disabled">Prezzo decrescente</a>
								{{/if}}
							</div>
					</div>
			  </div>
			</section>
			
			{{#if tags.length}}
			<section class="t-page__section pt-0 pb-0">
			  <div class="c-cards">
					<p><b>Filtra per:</b></p>
					<div class="dropdown">
						<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							{{activeTag}}
						</button>
							<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
							{{#each tags}}
								<li class="page-item">
									<a
										class="page-link {{#ifEquals ../activeTag @this}} active {{else}} disabled {{/ifEquals}}"
										href="/collections/{{../slug}}/{{../external_id}}/{{URIEncoding @this}}?{{../currentQuery}}"
									><i class="{{#ifEquals ../activeTag @this}} fas {{else}} far {{/ifEquals}} fa-circle"></i>{{@this}}</a>
								</li>
							{{/each}}
							</div>
					</div>
			  </div>
			</section>
			{{/if}}
		</div>
	
		<div class="col-12 col-lg-9">
			<section class="t-page__section">
				<div class="row c-cards">
					{{#each products}}
						<div class="col-lg-4 col-6">
							<a href="{{url}}" class="">
								<div class="card c-card__item">
								{{#if isNew}}
								<span class="badge badge-pill badge-success c-card__badge c-card__badge--sx">New</span>
								{{/if}}
								{{!-- <img class="card-img-top c-card__img" src="{{images.[0]}}" alt="Card image cap"> --}}
								<div class="img-container">
									<img class="card-img-top c-card__img" src="{{images.[0]}}" alt="Card image cap">
								</div>
								<div class="card-body c-card__body">
									<h5 class="card-title c-card__title">{{name}}</h5>
									<span class="c-card__price">{{price}}</span>
									<div class="clearfix"></div>
								
								</div>
								</div>
							</a> 
						</div>
					{{/each}}
				</div>
			</section>

					<section class="t-page__section">
						<div class="container">
							<div class="row justify-content-end">
									{{#if paginator.prev}}
										<a class="page-link pagination" href="{{paginator.prev}} "><i class="material-icons">chevron_left</i></a>
									{{else}}
										<a class="page-link pagination disabled"><i class="material-icons">chevron_left</i></a>
									{{/if}}
									<a class="page-link pagination"><p>Pagina {{paginator.current}} di {{paginator.totalPage}}</p></a>
								{{#if paginator.next}}
									<a class="page-link pagination" href="{{paginator.next}}"><i class="material-icons">chevron_right</i></a>
								{{else}}
									<a class="page-link pagination disabled"><i class="material-icons">chevron_right</i></a>
								{{/if}}
							</div>
						</div>
					</section>


