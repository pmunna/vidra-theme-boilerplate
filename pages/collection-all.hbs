<div class="container">
	<div class="row">
		<div class="col-3 d-lg-block d-none">
			<section class="t-page__section pb-4">
			  <div class="c-cards">
				<p><b>Ordina per:</b></p>
					<div class="dropdown">
						<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							{{#ifEquals activeNavigation 'lastarr'}} Ultimi arrivi {{/ifEquals}}
							{{#ifEquals activeNavigation 'nameaz'}} Nome A-Z {{/ifEquals}}
							{{#ifEquals activeNavigation 'nameza'}} Nome Z-A {{/ifEquals}}
							{{#ifEquals activeNavigation 'priceasc'}} Prezzo crescente {{/ifEquals}}
							{{#ifEquals activeNavigation 'pricedesc'}} Prezzo decrescente {{/ifEquals}}
						</button>
							<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
								{{#if navigation.lastarr}}
									<a class="dropdown-item page-link" href="{{navigation.lastarr}}">Ultimi arrivi</a>
								{{else}}
									<a class="dropdown-item page-link active disabled">Ultimi arrivi</a>
								{{/if}}
								{{#if navigation.nameaz}}
									<a class="dropdown-item page-link" href="{{navigation.nameaz}}">Nome A-Z</a>
								{{else}}
									<a class="dropdown-item page-link active disabled">Nome A-Z</a>
								{{/if}}
								{{#if navigation.nameza}}
									<a class="dropdown-item page-link" href="{{navigation.nameza}}">Nome Z-A</a>
								{{else}}
									<a class="dropdown-item page-link active disabled">Nome Z-A</a>
								{{/if}}
								{{#if navigation.priceasc}}
									<a class="dropdown-item page-link" href="{{navigation.priceasc}}">Prezzo crescente</a>
								{{else}}
									<a class="dropdown-item page-link active disabled">Prezzo crescente</a>
								{{/if}}
								{{#if navigation.pricedesc}}
									<a class="dropdown-item page-link" href="{{navigation.pricedesc}}">Prezzo decrescente</a>
								{{else}}
									<a class="dropdown-item page-link active disabled">Prezzo decrescente</a>
								{{/if}}
							</div>
					</div>
			</section>
			
			{{#if tags.length}}
			<section class="t-page__section pt-4">
			  <div class="c-cards">
				<p><b>Filtra per:</b></p>
				<p class="sub">Tipologia</p>
				  <ul class="pagination">
					<li class="page-item">
						{{#if activeTag}}
								<a class="page-link {{#if activeTag}} {{else}} active disabled {{/if}}"
								{{#if activeTag}} href="/collections/all" {{/if}}
								><i class="far fa-circle"></i> Tutti</a>
							{{else}}
								<a class="page-link {{#if activeTag}} {{else}} active disabled {{/if}}"
								{{#if activeTag}} href="/collections/all" {{/if}}
								><i class="fas fa-circle"></i> Tutti</a>
						{{/if}}
					</li>
					{{#each tags}}
					<li class="page-item">
						{{#ifEquals ../activeTag @this}}
							<a class="page-link active"
							{{#ifNotEquals ../activeTag @this}} href="/collections/all/{{URIEncoding @this}}"{{/ifNotEquals}}
							><i class="fas fa-circle"></i> {{@this}}</a>
							{{else}}
								<a class="page-link disabled"
								{{#ifNotEquals ../activeTag @this}} href="/collections/all/{{URIEncoding @this}}"{{/ifNotEquals}}
								><i class="far fa-circle"></i> {{@this}}</a>
						{{/ifEquals}}
					</li>
					{{/each}}
				  </ul>
				
			  </div>
			</section>
			{{/if}}
		</div>
		
		<div class="col-12 d-lg-none d-block">
			<section class="t-page__section pb-4">
			  <div class="c-cards">
				<p><b>Ordina per:</b></p>
					
					<div class="dropdown">
						<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							{{#ifEquals activeNavigation 'lastarr'}} Ultimi arrivi {{/ifEquals}}
							{{#ifEquals activeNavigation 'nameaz'}} Nome A-Z {{/ifEquals}}
							{{#ifEquals activeNavigation 'nameza'}} Nome Z-A {{/ifEquals}}
							{{#ifEquals activeNavigation 'priceasc'}} Prezzo crescente {{/ifEquals}}
							{{#ifEquals activeNavigation 'pricedesc'}} Prezzo decrescente {{/ifEquals}}
						</button>
							<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
								{{#if navigation.lastarr}}
									<a class="dropdown-item page-link" href="{{navigation.lastarr}}">Ultimi arrivi</a>
								{{else}}
									<a class="dropdown-item page-link active disabled">Ultimi arrivi</a>
								{{/if}}
								{{#if navigation.nameaz}}
									<a class="dropdown-item page-link" href="{{navigation.nameaz}}">Nome A-Z</a>
