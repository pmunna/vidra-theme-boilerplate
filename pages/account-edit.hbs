<!-- Modifica delle credenziali dell'account. Questa pagina Ã¨ un duplicato di account.hbs, 
eccetto a partire dal form #edit dove le informazioni sono sostituite da input di modifica e un btn per salvare-->

<div class="container">
  <div class="row text-center">
    <div class="col-12 text-center my-5">
      <h1 class="page-title">
        Account
      </h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <ul class="nav">
        <li class="nav-item">
          <div class="nav-link">Benvenuto, {{account.name}}</div>
        </li>
      </ul>
      <ul class="nav">
        <li class="nav-item">
          <a class="nav-link" href="/user/account">Dati utente</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/user/account/orders">I tuoi ordini</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Log out</a>
        </li>
      </ul>
    </div>
      <div class="col-md-8">
        <!--Form di modifica-->
        <form id="edit" method="POST" class="card my-5">
          <div class="card-body">
            <h5 class="card-title">Dati utente</h5>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <h5 class="card-title">Nome</h5>
              <input required name="name" type="text" id="nome" aria-describedby="nome" placeholder="Nome Cognome" value="{{account.name}}">
            </li>
            <li class="list-group-item">
              <h5 class="card-title">E-mail</h5>
               <input required name="email" type="email" id="email" aria-describedby="email" placeholder="mail@mail.it" value="{{account.email}}">   
            </li>
            <li class="list-group-item">
              <h5 class="card-title">Telefono</h5>
              <input required name="phone" type="" id="telefono" aria-describedby="telefono" placeholder="347 1234567" value="{{account.phone}}">              
            </li> 
          </ul>
          <div class="card-body">
            <div class="save">
              <button type="submit" class="btn btn-primary">Salva</button>
            </div>
          </div>
        </form>
        <!--/Form di modifica-->
    </div>
  </div>