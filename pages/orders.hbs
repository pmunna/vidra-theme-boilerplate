<!--Lista di ordini nella sezione account-->
<div class="container">
  <div class="row text-center">
    <div class="col-12 text-center my-5">
      <h1 class="page-title">
        Ordini
      </h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <ul class="nav">
        <li class="nav-item">
          <div class="nav-link">Benvenuto, {{account.name}}</div>
        </li>
      </ul>
      <ul class="nav">
        <li class="nav-item">
          <a class="nav-link" href="/user/account">Dati utente</a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled" href="/user/account/orders">I tuoi ordini</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Log out</a>
        </li>
      </ul>
    </div>
    <div class="col-md-8">
      {{#each orders}}
        <div class="card my-5">
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <h5 class="card-title">Numero ordine:</h5>
              <p class="card-text">{{id}}</p>
              <a href="/user/account/orders/{{id}}">Dettagli ordine</a>
            </li>
            <li class="list-group-item">
              <h5 class="card-title">Data:</h5>
              <p class="card-text">{{formatDate created "DD/MM/YY"}}</p>
            </li>
            <li class="list-group-item">
              <h5 class="card-title">Totale:</h5>
              <p class="card-text">{{total}}</p>
            </li> 
          </ul>
          <div class="modal-body">
            <table>
              <tbody>
                {{#each cart.items}}
                  <tr>
                      <th class="p-2">
                          <img class="object-fit-4" src="{{image}}"/>
                      </th>
                      <th class="p-2 w-100">
                          <h4 class="mb-0 mr-2">{{name}}</h4>
                      </th>
                      <th class="p-2 min">
                          <h5 class="mb-0">{{price}}€</h5>
                      </th>
                      <th>
                        {{#ifNotEquals '1' quantity}}{{#ifNotEquals '0' quantity}}<div class="amount">x{{quantity}}</div>{{/ifNotEquals}}{{/ifNotEquals}}
                      </th>
                  </tr>
                  {{/each}}
              </tbody>
            </table>
          </div>
        </div>
        {{else}}
          <div class="body-head">
            <div class="my-5">
              <h3>
                Non hai ancora fatto un acquisto.
              </h3>
              <p>
                Perchè non diventi subito un cliente? <br/>
                <a href="/">Compra qualcosa!</a>
              </p>
            </div>
          </div>
        {{/each}}
  </div>
</div>


