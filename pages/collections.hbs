<!--Lista delle collezioni-->
<div class="container">
  <div class="row justify-content-center">
		<div class=" text-center col-12 my-5">
			<h1>
				Collezioni
			</h1>
		</div>
	</div>
  <div class="row">
    {{#each allCollections}}
    <div class="col-6 mb-4">
      <a href="{{url}}">
        <div class="card">
          <div class="card-img-top-container">
            <img class="card-img-top" src="{{#if image}}{{image}}{{else}}{{shopURL}}/public/assets/images/products/empty.jpg{{/if}}" alt="{{name}}"> 
          </div>
          <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
          </div>
        </div>
      </a> 
    </div>	
    {{/each}}
  </div>
</div>
